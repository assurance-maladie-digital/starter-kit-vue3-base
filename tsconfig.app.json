{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/**/tests/*",
        "tests/unit/**/*"
    ],
    "exclude": ["src/**/__tests__/*", "src/**/tests/*", "tests/unit/**/*", "node_modules"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true,
        "types": [
            "node",
            "vuex",
            "vuetify"
        ],
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@cnamts/synapse-bridge/modules/notification": ["node_modules/@cnamts/synapse-bridge/src/modules/notification/index.ts"]
        }
    },
}