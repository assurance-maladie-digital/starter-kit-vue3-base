{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/tests/*", "tests/unit/**/*"],
    "exclude": ["src/**/__tests__/*", "src/**/tests/*", "tests/unit/**/*"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
